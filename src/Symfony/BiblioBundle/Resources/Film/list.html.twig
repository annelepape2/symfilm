{# src\Devschool\BiblioBundle\Resources\views\Livre\list.html.twig #}
<h1>{{ titre|upper }} ({{ films|length }})</h1>

<ul class="liste">
    {% for film in films %}
        <li>
            <h2><a href="{{ path('symfony_biblio_default_show', {'id': film.id}) }}">{{ film.titre }}</a></h2>
            {% if film.auteur == "J. K. Rowling" %}
                <strong>{{ film.auteur }}</strong>
            {% else %}
                <span>{{ film.auteur }}</span>
            {% endif %}
        </li>
    {% endfor %}
</ul>